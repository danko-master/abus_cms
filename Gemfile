source 'https://rubygems.org'

gem 'rails', '3.2.6'
gem 'pg', '0.14.0' # БД
gem 'therubyracer', '0.10.1' # для вызова javascript
gem 'jquery-rails', '2.0.2'



# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '3.2.5' # создает css.scss файл
  gem 'coffee-rails', '~> 3.2.2' # создает js.coffee файл
  gem 'uglifier', '>= 1.2.6' # оболочка для UglifyJS JavaScript
end



group :development do
  gem 'rspec-rails', '2.11.0' # RSpec тесты
  gem 'annotate', '2.4.0' # Описание для модели
end

group :test do
  gem 'rspec-rails', '2.11.0'   
  gem 'factory_girl_rails', '3.5.0' # Фабрика юзеров для тестирования
  
  #gem 'webrat', '0.7.3' # Интеграционное тестирование (прокликать формы и вернуть нужный результат)
end